#, kv file implementation 

<Filechooser>: 
	
	filelabel: filelabel

	# Providing the orentation 
	orientation: 'vertical'

	# Creating the File list / icon view 
	
	BoxLayout: 

		# Creating list view one side 
		FileChooserListView: 
			canvas.before:
				Color:
                    rgb:176,215,243
				Rectangle:
					pos: self.pos
					size: self.size
			on_selection: root.select(*args) 
		# Creating Icon view other side
		FileChooserIconView: 
			canvas.before:
				Color:
					rgb: 176, 215, 243
				Rectangle:
					pos: self.pos
					size: self.size
			on_selection: root.select(*args) 

	# Adding label 
	Label: 
		id:filelabel
		size_hint_y: .1
        color:0,0,0,1
  		canvas.before:
			Color:
				rgb: 0.108,0.476,0.611
			Rectangle:
				pos: self.pos
				size: self.size
		
